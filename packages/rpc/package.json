{
  "name": "@finney/rpc",
  "version": "0.0.3",
  "description": "A dependency-free TypeScript client for Bitcoin Core's JSON-RPC",
  "main": "./dist/index.js",
  "scripts": {
    "build": "bun build ./index.ts --outdir ./dist",
    "dev": "bun build ./index.tsx --outdir ./dist --watch"
  },
  "files": [
    "dist/package.json",
    "dist/*.js",
    "dist/**/*.js",
    "dist/**/*.d.ts",
    "dist/*.d.ts"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.js"
    }
  },
  "devDependencies": {
    "bun-types": "^1.0.7"
  }
}
