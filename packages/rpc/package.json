{
  "name": "@finney/rpc",
  "version": "0.0.2",
  "description": "A dependency-free TypeScript client for Bitcoin Core's JSON-RPC",
  "main": "./dist/index.js",
  "files": [
    "dist/package.json",
    "dist/*.js",
    "dist/**/*.js",
    "dist/**/*.d.ts",
    "dist/*.d.ts"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsc ./index.ts --outDir ./dist --declaration"
  },
  "devDependencies": {
    "bun-types": "^0.3.0"
  }
}